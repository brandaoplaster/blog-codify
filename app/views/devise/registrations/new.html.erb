 <div class="container mx-auto p-8 flex">
  <div class="max-w-md w-full mx-auto">
    <h1 class="text-4xl text-center mb-12 font-thin">
      The Codify
    </h1>

    <div class="bg-white rounded-lg overflow-hidden shadow-2xl">
      <div class="p-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-5">
            <%= f.label :username, class: "block mb-2 text-sm font-medium text-gray-600" %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "email", class: "block w-full p-3 rounded bg-gray-200 border border-transparent focus:outline-none" %>
          </div>

          <div class="mb-5">
            <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-600" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full p-3 rounded bg-gray-200 border border-transparent focus:outline-none" %>
          </div>

          <div class="mb-5">
            <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-600" %>
            <% if @minimum_password_length %>
            <em class="text-red-700">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "block w-full p-3 rounded bg-gray-200 border border-transparent focus:outline-none" %>
          </div>

          <div class="mb-5">
            <%= f.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-600" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full p-3 rounded bg-gray-200 border border-transparent focus:outline-none" %>
          </div>

          <%= f.submit "Sign up", class: "w-full p-3 mt-4 bg-indigo-600 text-white rounded shadow" %>
        <% end %>
      </div>

        <div class="flex justify-between p-8 text-sm border-t border-gray-300 bg-gray-100">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>
